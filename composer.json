{
  "name": "triniti/schemas",
  "homepage": "https://github.com/triniti/schemas",
  "description": "Schemas for common Triniti apps and components.",
  "type": "pbj-schema-store",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.4",
    "gdbots/schemas": "^2.1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "gdbots/pbjc": "v1.x-dev",
    "symfony/yaml": "^4.4"
  },
  "autoload": {
    "psr-0": {
      "": "build/php/src"
    }
  },
  "autoload-dev": {
    "files": [
      "build/php/src/pbj-schemas.php",
      "pbj-schema-stores.php"
    ],
    "psr-0": {
      "": "build/php/tests"
    }
  },
  "scripts": {
    "pbjc": [
      "vendor/bin/pbjc",
      "git add .",
      "@test"
    ],
    "test": [
      "vendor/bin/phpunit",
      "npm test"
    ]
  }
}
