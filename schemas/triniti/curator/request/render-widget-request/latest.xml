<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:request:render-widget-request:1-0-0">
    <fields>
      <field name="widget_ref" type="node-ref"/>
      <field name="widget" type="message">
        <any-of>
          <curie>triniti:curator:mixin:widget</curie>
        </any-of>
      </field>
      <field name="context" type="message">
        <any-of>
          <curie>triniti:common::render-context</curie>
        </any-of>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:request:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
