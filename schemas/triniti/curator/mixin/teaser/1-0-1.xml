<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:teaser:1-0-1" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <imports>use Triniti\Schemas\Curator\TeaserId;</imports>
          <class-name>TeaserId::class</class-name>
          <default>function() { return TeaserId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import TeaserId from '@triniti/schemas/triniti/curator/TeaserId';</imports>
          <class-proto>TeaserId</class-proto>
          <default>() => TeaserId.generate()</default>
        </js-options>
      </field>
      <field name="order_date" type="date-time">
        <description>
          Determines the sequence that this teaser node will be rendered
          in lists, search results, etc. It DOES NOT control visibility or
          publishing. A date was used over an integer (e.g. seq_no) for
          blog-like, reverse chronological, clarity in sorting.
        </description>
      </field>
      <field name="image_ref" type="identifier">
        <description>
          A reference to the image asset to use for widgets, sharing, seo.
        </description>
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="description" type="text" max="5000">
        <description>
          A description of the teaser (usually a few sentences). It should typically
          not have HTML as it is used in metadata, feeds, SERP and social.
        </description>
      </field>
      <field name="caption" type="string">
        <description>
          Text to be used to caption the teaser.
        </description>
      </field>
      <field name="cta_text" type="string">
        <description>
          Text to be used for the call to action.
        </description>
      </field>
      <field name="credit" type="string">
        <description>
          Text to be used to credit the teaser source.
        </description>
      </field>
      <field name="credit_url" type="text" format="url">
        <description>
          URL to be used to link to the teaser source.
        </description>
      </field>
      <field name="gallery_ref" type="identifier">
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="timeline_ref" type="identifier">
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
    </fields>
  </schema>
</pbj-schema>
