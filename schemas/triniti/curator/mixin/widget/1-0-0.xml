<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:widget:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <imports>use Triniti\Schemas\Curator\WidgetId;</imports>
          <class-name>WidgetId::class</class-name>
          <default>function() { return WidgetId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import WidgetId from '@triniti/schemas/triniti/curator/WidgetId';</imports>
          <class-proto>WidgetId</class-proto>
          <default>() => WidgetId.generate()</default>
        </js-options>
      </field>
      <field name="pre_render_code" type="text">
        <description>
          A string containing HTML that is injected into
          the application before the widget renders.
        </description>
      </field>
      <field name="post_render_code" type="text">
        <description>
          A string containing HTML that is injected into
          the application after the widget renders.
        </description>
      </field>
      <field name="show_border" type="boolean"/>
      <field name="show_header" type="boolean">
        <default>true</default>
      </field>
      <field name="header_text" type="string"/>
      <field name="partner_url" type="text" format="url"/>
      <field name="partner_text" type="string"/>
      <field name="view_all_url" type="text" format="url"/>
      <field name="view_all_text" type="string"/>
    </fields>
  </schema>
</pbj-schema>
