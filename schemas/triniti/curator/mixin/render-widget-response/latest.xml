<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:render-widget-response:1-0-1" mixin="true"
      extends="gdbots:pbjx:mixin:response:v1">
    <fields>
      <field name="html" type="medium-text"/>
      <field name="search_response" type="message">
        <any-of>
          <curie>triniti:curator:mixin:widget-search-response</curie>
        </any-of>
      </field>
      <field name="links" type="text" rule="map">
        <description>
          @link https://en.wikipedia.org/wiki/HATEOAS
        </description>
      </field>
    </fields>
  </schema>
</pbj-schema>
