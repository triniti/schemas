<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:timeline:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <imports>use Triniti\Schemas\Curator\TimelineId;</imports>
          <class-name>TimelineId::class</class-name>
          <default>function() { return TimelineId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import TimelineId from '@triniti/schemas/triniti/curator/TimelineId';</imports>
          <class-proto>TimelineId</class-proto>
          <default>() => TimelineId.generate()</default>
        </js-options>
      </field>
      <field name="image_ref" type="identifier">
        <description>
          A reference to the image asset to use for widgets, sharing, seo.
        </description>
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="allow_comments" type="boolean">
        <default>true</default>
      </field>
      <field name="description" type="text" max="5000">
        <description>
          A description of the timeline (usually a few sentences). It should typically
          not have HTML as it is used in metadata, feeds, SERP and social.
        </description>
      </field>
      <field name="related_timelines" type="identifier" rule="list">
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        '_id' => (string)$this->get('_id'),
        'slug' => $this->get('slug'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    _id: `${this.get('_id', '')}`,
    slug: this.get('slug'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
