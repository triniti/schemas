<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:has-related-teasers:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="related_teasers_heading" type="string"/>
      <field name="related_teaser_refs" type="identifier" rule="set">
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
    </fields>
  </schema>
</pbj-schema>
