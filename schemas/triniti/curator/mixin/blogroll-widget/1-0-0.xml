<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:curator:mixin:blogroll-widget:1-0-0" mixin="true" extends="triniti:curator:mixin:widget:v1">
    <fields>
      <field name="promotion_slot_prefix" type="string" format="slug">
        <description>
          A prefix for the promotion slots that will be injected
          in between (aka "separators") items in the blogroll.
        </description>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        '_id' => (string)$this->get('_id'),
        'promotion_slot' => $this->get('promotion_slot'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    _id: `${this.get('_id', '')}`,
    promotion_slot: this.get('promotion_slot'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
