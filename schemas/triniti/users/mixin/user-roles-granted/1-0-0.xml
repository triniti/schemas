<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:users:mixin:user-roles-granted:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:event:v1">
    <fields>
      <field name="node_ref" type="identifier" required="true">
        <php-options>
          <classname>Gdbots\Schemas\Ncr\NodeRef</classname>
        </php-options>
      </field>
      <field name="roles" type="string" pattern="^[\w_]+$" rule="set">
        <description>The roles granted to the user.</description>
      </field>
    </fields>

    <php-options>
      <namespace>Triniti\Schemas\Users\Mixin\UserRolesGranted</namespace>
    </php-options>
  </schema>
</pbj-schema>
