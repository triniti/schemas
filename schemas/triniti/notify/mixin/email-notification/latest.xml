<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:notify:mixin:email-notification:1-0-0" mixin="true"
          extends="triniti:notify:mixin:notification:v1">
    <fields>
      <field name="lists" type="int" rule="map">
        <description>
          Keys are list slugs, e.g. "newsletter-subscribers" and values are sendgrid list ids.
          @link https://sendgrid.api-docs.io/v3.0/contacts-api-lists/create-a-list
        </description>
      </field>
      <field name="template" type="string" format="slug">
        <description>
          Visual layout for the email. e.g. "breaking-news", "exclusive-video".
        </description>
      </field>
      <field name="sender" type="int">
        <description>
          Sendgrid sender id.
        </description>
      </field>
    </fields>
    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        '_id' => (string)$this->get('_id'),
        'template' => $this->get('template'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    _id: `${this.get('_id', '')}`,
    template: this.get('template'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
