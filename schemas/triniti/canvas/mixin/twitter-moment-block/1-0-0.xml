<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <!--
    @link https://dev.twitter.com/web/embedded-moments/parameters
  -->
  <schema id="pbj:triniti:canvas:mixin:twitter-moment-block:1-0-0" mixin="true"
      extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="id" type="string" pattern="^\d+$" required="true"/>
      <field name="title" type="string"/>
      <field name="limit" type="tiny-int" min="1" max="20">
        <default>1</default>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'id' => $this->get('id'),
        'title' => $this->get('title'),
        'limit' => $this->get('limit'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-options>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    id: this.get('id'),
    title: this.get('title'),
    limit: this.get('limit'),
  };
}
          ]]>
        </methods>
      </insertion-options>
    </js-options>
  </schema>
</pbj-schema>
