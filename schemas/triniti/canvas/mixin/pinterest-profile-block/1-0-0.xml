<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <!--
    @link https://developers.pinterest.com/tools/widget-builder/?type=profile
  -->
  <schema id="pbj:triniti:canvas:mixin:pinterest-profile-block:1-0-0" mixin="true"
      extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="href" type="string" format="url" required="true"/>
      <field name="size" type="string" pattern="^[\w-]+$">
        <default>square</default>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'href' => $this->get('href'),
        'size' => $this->get('size'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    href: this.get('href'),
    size: this.get('size'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
