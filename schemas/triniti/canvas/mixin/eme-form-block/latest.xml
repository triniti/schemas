<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:canvas:mixin:eme-form-block:1-0-0" mixin="true" extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="solicit_id" type="string" pattern="^[\w\/-]+$" required="true"/>
      <field name="expiration_date" type="date-time">
        <description>
          Represents the date on which the solicit is set to expire.
        </description>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'solicit_id' => $this->get('solicit_id'),
        'expiration_date' => $this->get('expiration_date'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    solicit_id: this.get('solicit_id'),
    expiration_date: this.get('expiration_date'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
