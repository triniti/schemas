<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <!--
    @link https://dev.twitter.com/web/embedded-timelines/user
  -->
  <schema id="pbj:triniti:canvas:mixin:twitter-user-timeline-block:1-0-0" mixin="true"
      extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="screen_name" type="string" pattern="^[\w\.]+$" required="true"/>
      <field name="show_replies" type="boolean"/>
      <field name="tweet_limit" type="tiny-int" min="1" max="20">
        <default>1</default>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'screen_name' => $this->get('screen_name'),
        'show_replies' => $this->get('show_replies'),
        'tweet_limit' => $this->get('tweet_limit'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    screen_name: this.get('screen_name'),
    show_replies: this.get('show_replies'),
    tweet_limit: this.get('tweet_limit'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
