<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:canvas:mixin:vimeo-video-block:1-0-0" mixin="true" extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="video_id" type="string" pattern="^\d+$" required="true"/>
      <field name="autoplay" type="boolean"/>
      <field name="loop" type="boolean"/>
      <field name="byline" type="boolean">
        <description>
          Whether or not to show the byline (eg "from Dick Tracy") in the thumbnail.
        </description>
      </field>
      <field name="portrait" type="boolean">
        <description>
          Whether or not to show the portrait (profile image) in the thumbnail.
        </description>
      </field>
      <field name="title" type="boolean">
        <description>
          Whether or not to show the video title in the thumbnail.
        </description>
      </field>
      <field name="description_text" type="text" max="5000"/>
      <field name="title_text" type="text" max="500"/>
      <field name="user_name" type="text" max="50"/>
      <field name="poster_image_ref" type="identifier">
        <description>
          A reference to an image asset to use as the poster that will
          override what is provided by vimeo.
        </description>
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'video_id' => $this->get('video_id'),
        'autoplay' => $this->get('autoplay'),
        'loop' => $this->get('autoplay'),
        'byline' => $this->get('byline'),
        'portrait' => $this->get('portrait'),
        'title' => $this->get('title'),
        'description_text' => $this->get('description_text'),
        'title_text' => $this->get('title_text'),
        'user_name' => $this->get('user_name'),
        'poster_image_ref' => $this->get('poster_image_ref'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    video_id: this.get('video_id'),
    autoplay: this.get('autoplay'),
    loop: this.get('loop'),
    byline: this.get('byline'),
    portrait: this.get('portrait'),
    title: this.get('title'),
    description_text: this.get('description_text'),
    title_text: this.get('title_text'),
    user_name: this.get('user_name'),
    poster_image_ref: this.get('poster_image_ref'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
