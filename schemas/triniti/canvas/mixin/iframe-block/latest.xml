<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:canvas:mixin:iframe-block:1-0-0" mixin="true" extends="triniti:canvas:mixin:block:v1">
    <!-- todo: add sandboxing options to limit iframe abilities -->
    <fields>
      <field name="src" type="string" format="url" required="true"/>
      <field name="width" type="string" pattern="^\d+(%|px)?$"/>
      <field name="height" type="string" pattern="^\d+(%|px)?$"/>
      <field name="align" type="string" pattern="^(center|right|left)$"/>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        'etag' => $this->get('etag'),
        'src' => $this->get('src'),
        'width' => $this->get('width'),
        'height' => $this->get('height'),
        'align' => $this->get('align'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-options>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
    src: this.get('src'),
    width: this.get('width'),
    height: this.get('height'),
    align: this.get('align'),
  };
}
          ]]>
        </methods>
      </insertion-options>
    </js-options>
  </schema>
</pbj-schema>
