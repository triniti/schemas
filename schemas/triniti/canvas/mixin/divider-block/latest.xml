<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:canvas:mixin:divider-block:1-0-0" mixin="true" extends="triniti:canvas:mixin:block:v1">
    <fields>
      <field name="text" type="string"/>
      <field name="stroke_color" type="string" format="slug"/>
      <field name="stroke_style" type="string" format="slug"/>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
public function getUriTemplateVars(): array
{
    return [
        'etag' => $this->fget('etag'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    etag: this.get('etag'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
