<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:apollo:mixin:poll:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <imports>use Triniti\Schemas\Apollo\PollId;</imports>
          <class-name>PollId::class</class-name>
          <default>function() { return PollId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import PollId from '@triniti/schemas/triniti/apollo/PollId';</imports>
          <class-proto>PollId</class-proto>
          <default>() => PollId.generate()</default>
        </js-options>
      </field>
      <field name="image_ref" type="identifier">
        <description>
          A reference to the image asset to use for widgets, sharing, seo.
        </description>
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="question" type="string"/>
      <field name="question_url" type="text" format="url"/>
      <field name="allow_multiple_responses" type="boolean"/>
      <field name="answers" type="message" rule="list">
        <any-of>
          <curie>triniti:apollo:mixin:poll-answer</curie>
        </any-of>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <methods>
          <![CDATA[
public function getUriTemplateVars(): array
{
    return ['_id' => (string)$this->get('_id')];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return { _id: `${this.get('_id', '')}` };
}
            ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
