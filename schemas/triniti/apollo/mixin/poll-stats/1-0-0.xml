<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:apollo:mixin:poll-stats:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">
    <fields>
      <field name="_id" type="identifier" required="true" overridable="true">
        <php-options>
          <imports>use Triniti\Schemas\Apollo\PollId;</imports>
          <class-name>PollId::class</class-name>
          <default>function() { return PollId::generate(); }</default>
        </php-options>
        <js-options>
          <imports>import PollId from '@triniti/schemas/triniti/apollo/PollId';</imports>
          <class-proto>PollId</class-proto>
          <default>() => PollId.generate()</default>
        </js-options>
      </field>
      <field name="votes" type="int"/>
      <field name="answer_votes" type="int" rule="map">
        <description>
          Map of votes for each answer keyed by the poll answer id.
        </description>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return ['_id' => (string)$this->get('_id')];
}
            ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return { _id: `${this.get('_id', '')}` };
}
            ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
