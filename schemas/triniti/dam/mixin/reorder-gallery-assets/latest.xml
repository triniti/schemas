<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:dam:mixin:reorder-gallery-assets:1-0-0" mixin="true" extends="gdbots:pbjx:mixin:command:v1">
    <fields>
      <field name="gallery_ref" type="identifier">
        <description>
          The node ref for the gallery containing the assets being reordered.
        </description>
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="gallery_seqs" type="int" rule="map">
        <description>
          A map of asset ids to gallery sequence numbers.
        </description>
      </field>
    </fields>
  </schema>
</pbj-schema>
