<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:dam:mixin:search-assets-request:1-0-0" mixin="true"
      extends="gdbots:ncr:mixin:search-nodes-request:v1">
    <fields>
      <field name="sort" type="string-enum">
        <default>relevance</default>
        <enum id="triniti:dam:search-assets-sort"/>
      </field>
      <field name="types" type="string" rule="set">
        <description>
          A set of asset types to search, such as image-asset or video-asset.
        </description>
      </field>
    </fields>
  </schema>
</pbj-schema>
