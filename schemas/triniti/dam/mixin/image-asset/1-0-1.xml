<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:dam:mixin:image-asset:1-0-1" mixin="true" extends="triniti:dam:mixin:asset:v1">
    <fields>
      <field name="alt_text" type="text">
        <description>Alternate text for an image, if the image cannot be displayed or seen.</description>
      </field>
      <field name="width" type="small-int">
        <description>The image width in pixels.</description>
      </field>
      <field name="height" type="small-int">
        <description>The image height in pixels.</description>
      </field>
    </fields>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
    return [
        '_id' => (string)$this->get('_id'),
        'width' => $this->get('width'),
        'height' => $this->get('height'),
    ];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-points>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return {
    _id: `${this.get('_id', '')}`,
    width: this.get('width'),
    height: this.get('height'),
  };
}
          ]]>
        </methods>
      </insertion-points>
    </js-options>
  </schema>
</pbj-schema>
