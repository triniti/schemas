<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:videos:mixin:video:1-0-0" mixin="true" extends="gdbots:ncr:mixin:node:v1">

    <fields>
    </fields>

    <mixins>
      <curie-major>gdbots:ncr:mixin:expirable:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:indexed:v1</curie-major>
      <curie-major>gdbots:ncr:mixin:publishable:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>

    <php-options>
      <insertion-points>
        <imports/>
        <methods>
          <![CDATA[
/**
 * @return array
 */
public function getUriTemplateVars()
{
  return ['video_id' => (string)$this->get('_id')];
}
          ]]>
        </methods>
      </insertion-points>
    </php-options>

    <js-options>
      <insertion-options>
        <methods>
          <![CDATA[
/**
 * @returns {Object}
 */
getUriTemplateVars() {
  return { video_id: `${this.get('_id', '')}` };
}
          ]]>
        </methods>
      </insertion-options>
    </js-options>
  </schema>
</pbj-schema>
