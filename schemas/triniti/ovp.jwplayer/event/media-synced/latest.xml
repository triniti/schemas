<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:ovp.jwplayer:event:media-synced:1-0-1">
    <fields>
      <field name="node_ref" type="identifier" required="true">
        <php-options>
          <imports>use Gdbots\Schemas\Ncr\NodeRef;</imports>
          <class-name>NodeRef::class</class-name>
        </php-options>
        <js-options>
          <imports>import NodeRef from '@gdbots/schemas/gdbots/ncr/NodeRef';</imports>
          <class-proto>NodeRef</class-proto>
        </js-options>
      </field>
      <field name="jwplayer_media_id" type="string" pattern="^[\w-]+$"/>
      <field name="fields" type="string" pattern="^[\w-]+$" rule="set">
        <description>
          Auxiliary (e.g. thumbnail, captions, etc) jwplayer fields that were synced. A field is
          considered to be auxiliary if it cannot be updated using the standard "update video"
          api call.
        </description>
      </field>
    </fields>

    <mixins>
      <curie-major>gdbots:pbjx:mixin:event:v1</curie-major>
      <curie-major>gdbots:common:mixin:taggable:v1</curie-major>
    </mixins>
  </schema>
</pbj-schema>
