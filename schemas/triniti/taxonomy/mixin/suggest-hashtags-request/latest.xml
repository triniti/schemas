<?xml version="1.0" encoding="UTF-8" ?>
<pbj-schema xmlns="http://gdbots.io/pbj/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://gdbots.io/pbj/xsd http://gdbots.io/pbj/xsd/schema.xsd">

  <schema id="pbj:triniti:taxonomy:mixin:suggest-hashtags-request:1-0-0" mixin="true"
      extends="gdbots:pbjx:mixin:request:v1">
    <fields>
      <field name="prefix" type="string" format="hashtag"/>
      <field name="count" type="tiny-int">
        <description>The number of results to return.</description>
        <default>25</default>
      </field>
    </fields>
  </schema>
</pbj-schema>
