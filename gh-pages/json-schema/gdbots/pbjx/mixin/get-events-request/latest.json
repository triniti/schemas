{
  "id": "http://schemas.triniti.io/json-schema/gdbots/pbjx/mixin/get-events-request/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "stream_id": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    },
    "since": {
      "type": "string",
      "pattern": "^[1-9]{1}[0-9]{12,15}$",
      "description": "Return events since this time (exclusive greater than if forward=true, less than if forward=false)",
      "pbj": {
        "type": "microtime",
        "rule": "single",
        "useTypeDefault": false
      }
    },
    "count": {
      "type": "integer",
      "default": 25,
      "minimum": 0,
      "maximum": 255,
      "description": "The number of events to return.",
      "pbj": {
        "type": "tiny-int",
        "rule": "single"
      }
    },
    "forward": {
      "type": "boolean",
      "description": "When true, the events are read from oldest to newest, otherwise newest to oldest.",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    }
  },
  "required": [
    "stream_id"
  ],
  "additionalProperties": true
}