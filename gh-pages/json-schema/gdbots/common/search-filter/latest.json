{
  "id": "http://schemas.triniti.io/json-schema/gdbots/common/search-filter/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_schema": {
      "type": "string",
      "pattern": "^pbj:([a-z0-9-]+):([a-z0-9\\.-]+):([a-z0-9-]+)?:([a-z0-9-]+):([0-9]+-[0-9]+-[0-9]+)$",
      "default": "pbj:gdbots:common::search-filter:1-0-0"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z_]{1}[\\w-]*$"
    },
    "operator": {
      "type": "string",
      "default": "eq",
      "enum": [
        "unknown",
        "eq",
        "ne",
        "gt",
        "gte",
        "lt",
        "lte",
        "exists",
        "in",
        "contains",
        "not_contains"
      ]
    },
    "booleans": {
      "type": "array",
      "items": [
        {
          "type": "boolean"
        }
      ],
      "additionalProperties": false
    },
    "dates": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        }
      ],
      "additionalProperties": false
    },
    "floats": {
      "type": "array",
      "items": [
        {
          "type": "number",
          "default": 0
        }
      ],
      "additionalProperties": false
    },
    "ints": {
      "type": "array",
      "items": [
        {
          "type": "integer",
          "default": 0,
          "minimum": 0,
          "maximum": 4294967295
        }
      ],
      "additionalProperties": false
    },
    "strings": {
      "type": "array",
      "items": [
        {
          "type": "string",
          "minLength": 0,
          "maxLength": 255
        }
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "_schema",
    "name"
  ],
  "additionalProperties": false
}