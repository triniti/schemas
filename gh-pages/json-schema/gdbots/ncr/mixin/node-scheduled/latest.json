{
  "id": "http://schemas.triniti.io/json-schema/gdbots/ncr/mixin/node-scheduled/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "node_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    },
    "slug": {
      "type": "string",
      "pattern": "^([\\w\\/-]|[\\w-][\\w\\/-]*[\\w-])$",
      "minLength": 0,
      "maxLength": 255,
      "pbj": {
        "type": "string",
        "rule": "single",
        "format": "slug"
      }
    },
    "publish_at": {
      "type": "string",
      "format": "date-time",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    }
  },
  "required": [
    "node_ref"
  ],
  "additionalProperties": true
}