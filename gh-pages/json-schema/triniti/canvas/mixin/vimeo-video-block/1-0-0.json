{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/vimeo-video-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "id": {
      "type": "string",
      "pattern": "^\\d+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "autoplay": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "loop": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "show_byline": {
      "type": "boolean",
      "description": "Whether or not to show the byline (eg \"from Dick Tracy\") in the thumbnail.",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "show_portrait": {
      "type": "boolean",
      "description": "Whether or not to show the portrait (profile image) in the thumbnail.",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "show_title": {
      "type": "boolean",
      "description": "Whether or not to show the video title in the thumbnail.",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "description": {
      "type": "string",
      "minLength": 0,
      "maxLength": 5000,
      "pbj": {
        "type": "text",
        "rule": "single"
      }
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "user_name": {
      "type": "string",
      "pattern": "^[\\w\\.-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "poster_image_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "description": "A reference to an image asset to use as the poster that will override what is provided by vimeo.",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": true
}