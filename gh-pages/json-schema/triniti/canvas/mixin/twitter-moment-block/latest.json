{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/twitter-moment-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Used to visually represent an update that occurred on this block that is NOT when this block was literally last modified.",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    },
    "id": {
      "type": "string",
      "pattern": "^\\d+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "limit": {
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 20,
      "pbj": {
        "type": "tiny-int",
        "rule": "single"
      }
    }
  },
  "required": [
    "id"
  ],
  "additionalProperties": true
}