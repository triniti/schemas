{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/youtube-playlist-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Used to visually represent an update that occurred on this block that is NOT when this block was literally last modified.",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    },
    "playlist_id": {
      "type": "string",
      "pattern": "^[\\w-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "video_id": {
      "type": "string",
      "pattern": "^[\\w-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "autoplay": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "poster_image_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "description": "A reference to an image asset to use as the poster that will override what is provided by youtube.",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    }
  },
  "required": [
    "playlist_id",
    "video_id"
  ],
  "additionalProperties": true
}