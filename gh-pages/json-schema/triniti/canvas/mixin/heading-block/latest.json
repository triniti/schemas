{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/heading-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "updated_date": {
      "type": "string",
      "format": "date-time",
      "description": "Used to visually represent an update that occurred on this block that is NOT when this block was literally last modified.",
      "pbj": {
        "type": "date-time",
        "rule": "single"
      }
    },
    "text": {
      "type": "string",
      "minLength": 0,
      "maxLength": 2000,
      "pbj": {
        "type": "text",
        "rule": "single"
      }
    },
    "size": {
      "type": "integer",
      "default": 0,
      "minimum": 0,
      "maximum": 6,
      "pbj": {
        "type": "tiny-int",
        "rule": "single"
      }
    },
    "url": {
      "type": "string",
      "pattern": "^(https?:\\/\\/)?([\\da-z\\.-]+)\\.([a-z\\.]{2,6})([\\/\\w \\.-]*)*\\/?$",
      "pbj": {
        "type": "string",
        "rule": "single",
        "format": "url"
      }
    }
  },
  "additionalProperties": true
}