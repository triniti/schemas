{
  "id": "http://schemas.triniti.io/json-schema/triniti/users/mixin/user-roles-revoked/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "node_ref": {
      "type": "string",
      "pattern": "^[\\w\\/\\.:-]+$",
      "pbj": {
        "type": "identifier",
        "rule": "single"
      }
    },
    "roles": {
      "type": "array",
      "items": [
        {
          "type": "string",
          "pattern": "^[\\w_]+$"
        }
      ],
      "uniqueItems": true,
      "additionalProperties": false,
      "description": "The roles revoked from the user.",
      "pbj": {
        "type": "string",
        "rule": "set"
      }
    }
  },
  "required": [
    "node_ref"
  ],
  "additionalProperties": true
}