{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/twitter-collection-timeline-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "screen_name": {
      "type": "string",
      "pattern": "^[\\w\\.]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "collection_id": {
      "type": "string",
      "pattern": "^\\d+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "collection_title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "show_replies": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "tweet_limit": {
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 20,
      "pbj": {
        "type": "tiny-int",
        "rule": "single"
      }
    }
  },
  "required": [
    "screen_name",
    "collection_id"
  ],
  "additionalProperties": true
}