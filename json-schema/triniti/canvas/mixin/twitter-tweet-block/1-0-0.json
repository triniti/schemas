{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/twitter-tweet-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "screen_name": {
      "type": "string",
      "pattern": "^[\\w\\.]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "tweet_id": {
      "type": "string",
      "pattern": "^\\d+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "tweet_text": {
      "type": "string",
      "minLength": 0,
      "maxLength": 65535,
      "pbj": {
        "type": "text",
        "rule": "single"
      }
    },
    "hide_media": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "hide_thread": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    }
  },
  "required": [
    "screen_name",
    "tweet_id"
  ],
  "additionalProperties": true
}