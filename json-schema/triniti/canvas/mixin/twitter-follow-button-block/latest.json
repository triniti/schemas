{
  "id": "http://schemas.triniti.io/json-schema/triniti/canvas/mixin/twitter-follow-button-block/1-0-0.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "etag": {
      "type": "string",
      "pattern": "^[\\w\\.:-]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "css_class": {
      "type": "string",
      "pattern": "^[\\w\\s-]+$",
      "description": "In rendering environments that support HTML the css_class can be appended to the dom elements' class attribute.",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "screen_name": {
      "type": "string",
      "pattern": "^[\\w\\.]+$",
      "pbj": {
        "type": "string",
        "rule": "single"
      }
    },
    "show_screen_name": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    },
    "show_count": {
      "type": "boolean",
      "pbj": {
        "type": "boolean",
        "rule": "single"
      }
    }
  },
  "required": [
    "screen_name"
  ],
  "additionalProperties": true
}